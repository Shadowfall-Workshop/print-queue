<% @queue_items.each do |item| %>
  <div class="card shadow mb-4 bg-body-tertiary border-0">
    <div class="card-header d-flex justify-content-between align-items-center p-1 ps-3 bg-transparent border-<%= bootstrap_class_name_for(item.status) %> border-top border-bottom-0">
      <span class="text-<%= bootstrap_class_name_for(item.status) %>"><%= item.status %></span>
      <div class="d-flex flex-row gap-1">
        <%= link_to edit_queue_item_path(item), class: "btn btn-sm btn-outline-secondary" do %>
          <i class="bi bi-pencil"></i>
        <% end %>

        <%= button_to queue_item_path(item), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" do %>
          <i class="bi bi-trash"></i>
        <% end %>
      </div>

    </div>
    <div class="card-body py-1">
      <h5 class="card-title" ><%= item.name %></h5>
      <div>Color: <%= item.color %></div>
    </div>

    <div class="card-footer p-1 d-flex justify-content-end align-items-center bg-transparent border-0">
      <div class="d-flex flex-row gap-1">
        <% QueueItem.statuses.keys.each do |status| %>
          <!-- Skip the current status -->
          <% unless item.status == status %>
            <%= button_to queue_item_path(item), method: :patch, params: { queue_item: { status: status } }, class: "btn btn-sm btn-outline-contrast" do %>
              <%= status.capitalize %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>