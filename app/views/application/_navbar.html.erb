<% if user_signed_in? %>
  <!-- Top-right account menu -->
  <div class="position-fixed top-0 end-0 m-3 dropdown">
    <i class="bi bi-list fs-3 bg-dark p-2" data-bs-toggle="dropdown" aria-expanded="false" style="cursor:pointer;"></i>
    <ul class="dropdown-menu dropdown-menu-end">
      <li><%= link_to "Home", root_path, class: "dropdown-item" %></li>
      <li><%= link_to "Account Settings", edit_user_registration_path, class: "dropdown-item" %></li>
      <li><%= link_to 'Integrations', user_integrations_path, class: 'dropdown-item' %></li>
      <li><%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete, class: "dropdown-item text-danger" %></li>
    </ul>
  </div>

  <!-- Floating New Queue Item Button -->
  <%= link_to new_queue_item_path, class: "btn btn-primary rounded-circle position-fixed d-flex justify-content-center align-items-center shadow",
                  style: "width:70px; height:70px; bottom: 20px; right: 20px; z-index: 1050;",
                  title: "Add Queue Item", data: { bs_toggle: "tooltip" } do %>
    <i class="bi bi-plus-lg fs-3"></i>
  <% end %>
<% end %>